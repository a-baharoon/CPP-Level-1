#include <iostream>

using namespace std;

int main()
{
   /*
    #4 

    Problem: Write a program to ask the user to enter his/her:
    • Age
    • Driver license
    Then Print “Hired” if his\her age is grater than 21 and he/she
    has a driver license, otherwise Print “Rejected”

   */

  int Age;
  cout << "Enter your Age: ";
  cin >> Age;

  bool DriverLicense;
  cout << "Do you have a drivers license? (type 1 for yes and type 0 for no) ";
  cin >> DriverLicense;

  if (Age > 21 && DriverLicense == true)
    {
      cout << "Hired" << endl;
    }
  
  else
    {
      cout << "Rejected" << endl;
    }
  
  return 0;
}
