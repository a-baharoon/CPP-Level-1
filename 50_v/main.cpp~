#include <iostream>

using namespace std;

int main() {

  int Number;
  cout << "Please enter a positive number: ";
  cin >> Number;

  while (Number < 0) {
    cout << "Wrong number please enter a positive number: ";
    cin >> Number;
  }

  
  
  
  return 0;
}#include <iostream>
using namespace std;

int main() {

    cout << "\n For Loop \n";
    // for loop from 1 to 5
    for (int x = 1; x <= 5; x++)
    {
        cout << x << endl;
    }

    cout << "\n While Loop \n";
    // while loop from 1 to 5
    int i = 1;
    while (i <= 5)
    {
        cout << i << endl;
        i++;
    }

    return 0;
}
