#include <iostream>
using namespace std;
/*
    #32
    Problem:
    Write a program to ask the user to enter:

    • Number
    • M

    Then Print the Number^M

    Example:

    Inputs:
    2
    4

    Outputs:
    16
*/

int Exponent(int Number, int M)
{
  for (int i = 1; i <= M; i++)
    {
      Number *= Number
    }
  return Numbers;
}

int main()
{
  cout << Exponent(2, 4) << endl;
}
